.chat-main
  .main-header
    .main-header__left-box
      %h2.main-header__left-box__current-group
        = @group.name
      %ul.main-header__left-box__member-list
        Member : 
        %li.main-header__left-box__member-list__member  sam 
        %li.main-header__left-box__member-list__member  sample
    .main-header__edit-btn Edit

  .messages
    = render partial: 'message', collection: @messages
    .message
      .message__upper-info
        %p.message__upper-info__talker sam
        %p.message__upper-info__date 2019/11/06(Wed) 19:38:44
      %p.message__text テスト
    .message
      .message__upper-info
        %p.message__upper-info__talker sam
        %p.message__upper-info__date 2019/11/06(Wed) 19:38:44
      %p.message__text checkcheckcheck
  
  .form
      = form_for [@group, @message] do |f|
        .input-box
        = f.text_field :content, class: 'new_message__input-box__text', placeholder: 'type a message'
          = f.label :image, class: 'new_message__input-box__image' do
            = icon('fas', 'image', class: 'icon')
            = f.file_field :image, class: 'new_message__input-box__image__file'
        = f.submit 'Send', class: 'form__submit'
  
