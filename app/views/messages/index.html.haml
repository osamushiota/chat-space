.wrapper
  .chat-side
    .side-header
      .side-header__box
        %p.side-header__box__user-name sam
        %ul.side-header__box__menu
          =link_to "#", class: "side-header__box__menu__new-group" do
            =fa_icon 'pencil-square-o'
            %i.pencil-square-o
          =link_to "#", class: "side-header__box__menu__edit-user" do
            =fa_icon 'cog'
            %i.cog
          .side-header__box__menu__edit-user

    .groups
      .group
        %p.group__group-name sam
        %p.group__latest-message テスト
      .group 
        %p.group__group-name samsam
        %p.group__latest-message まだメッセージがありません
  
  .chat-main
    .main-header
      .main-header__left-box
        %h2.main-header__left-box__current-group
          sam
        %ul.main-header__left-box__member-list
          Member : 
          %li.main-header__left-box__member-list__member  sam 
          %li.main-header__left-box__member-list__member  sample
      .main-header__edit-btn Edit

    .messages 
      .message
        .message__upper-info
          %p.message__upper-info__talker sam
          %p.message__upper-info__date 2019/11/06(Wed) 19:38:44
        %p.message__text テスト
      .message
        .message__upper-info
          %p.message__upper-info__talker sam
          %p.message__upper-info__date 2019/11/06(Wed) 19:38:44
        %p.message__text checkcheckcheck

    .form
      %form.new_message
        %p.new_message_input_box
          .input-box
          %input.new_message__input-box__text{placeholder: "type a message", type: "text"}
            %label.new_message__input-box__image{for: "message_image"}
              %i.fa.fa-image
                %input.new_message__input-box__image__file{type: "file"}
          %input.input-box__submit-btn{type: "submit", value: "Send"}